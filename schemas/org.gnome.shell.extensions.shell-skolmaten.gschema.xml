<schemalist gettext-domain="gnome-shell-extensions">

  <schema id="org.gnome.shell.extensions.shell-skolmaten"
	  path="/org/gnome/shell/extensions/shell-skolmaten/">

    <key name="hideonfail" type="b">
      <default>true</default>
      <summary>Hide when no data recieved</summary>
      <description>Hide when no data recieved</description>
    </key>

    <key name="schoolindex" type="s">
	    <default>""</default>
	    <summary>School Index</summary>
	    <description>Helps locating currently selected school in settings</description>
    </key>

    <key name="schoolurl" type="s">
      <default>""</default>
      <summary>School URL</summary>
      <description>URL for the school</description>
    </key>
  </schema>
</schemalist>
